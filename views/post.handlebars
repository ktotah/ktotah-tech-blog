{{> header}}
<main>
  <section class="post">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.user.username}} on {{format_date post.createdAt}}</p>
    <section class="comments">
      <h3>Comments</h3>
      {{#each post.comments}}
        <div class="comment">
          <p>{{this.comment_text}}</p>
          <p>Commented by {{this.user.username}} on {{format_date this.createdAt}}</p>
        </div>
      {{/each}}
    </section>
    {{#if logged_in}}
    <form id="comment-form">
      <textarea id="comment-text" name="comment_text" required></textarea>
      <button type="submit">Submit Comment</button>
    </form>
    {{else}}
    <p><a href="/login">Log in</a> to comment</p>
    {{/if}}
  </section>
</main>
{{> footer}}
