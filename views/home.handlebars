{{> header}}
<main>
  <section class="posts">
    {{#each posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p class="posted-info">Posted by {{this.user.username}} on {{format_date this.createdAt}}</p>
      </article>
    {{/each}}
  </section>
</main>

